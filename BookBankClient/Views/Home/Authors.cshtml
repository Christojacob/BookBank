@model IEnumerable<Author>
@{
    ViewData["Title"] = "BookBank";
}
<nav class="navbar  navbar-default theme_nav">
    <div class="container-fluid">
        <div class="navbar-header">
            <img class="logo" src="/images/logo.png" />
            <a class="navbar-brand" href="#">Global Book Bank</a>
        </div>

        <div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/Home/Authors">Home</a></li>
                <li><a href="/Home/AddAuthor">Add Author</a></li>
                <li><a href="/Home/Logout">Logout</a></li>
                <!--<li><a asp-action="Logout" asp-controller="Account">Logout</a></li>-->
            </ul>

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div>
    <div class="text-center">
        <h2 class="display-4">Authors</h2>
    </div>
    <div class="container">
        <form asp-action="Search" class="searchform" method="post">
            <div class="row">
                <div class="col-8">
                    <select name="authorId" class="authorselect">
                        <option value="">Select an author</option>
                        @foreach (var item in Model)
                        {
                            <option value="@item.AuthorId">@item.AuthorName</option>
                        }
                    </select>
                </div>
                <div class="col-4">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>

        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.AuthorName</h5>
                    <p class="card-text">Description: @item.AuthorDescription</p>
                    <p class="card-text">Country: @item.AuthorCountry</p>
                    <a href="/Home/UpdateAuthor?AuthorId=@item.AuthorId&AuthorName=@item.AuthorName&AuthorDescription=@item.AuthorDescription&AuthorCountry=@item.AuthorCountry" class="btn btn-primary">Update</a>
                    <a href="/Home/DeleteAuthor?id=@item.AuthorId" class="btn btn-primary">Delete</a>
                    <a href="/Home/ViewAuthor?id=@item.AuthorId" class="btn btn-primary">View</a>
                </div>
            </div>

        }
    </div>
</div>
