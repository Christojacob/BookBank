@model AuthorWithBooks
@{
    ViewData["Title"] = "BookBank";
}
<nav class="navbar  navbar-default theme_nav">
    <div class="container-fluid">
        <div class="navbar-header">
            <img class="logo" src="/images/logo.png" />
            <a class="navbar-brand" href="#">Global Book Bank</a>
        </div>

        <div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/Home/Authors">Home</a></li>
                <li><a href="/Home/AddAuthor">Add Author</a></li>
                <li><a href="/Home/Logout">Logout</a></li>
                <!--<li><a asp-action="Logout" asp-controller="Account">Logout</a></li>-->
            </ul>

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div>
    <div class="container">

        <div class="text-center">
            <h1 class="display-4">@Model.AuthorName</h1>
        </div>
        <div>
            <p>@Model.AuthorDescription.</p>
            <p>Country: @Model.AuthorCountry</p>
            <p>Number of Books: @Model.NumberOfBooks</p>
        </div>
        <div class="text-right">
            <a href="AddBook?id=@Model.AuthorId" target="_blank" class="btn btn-primary">Add New Book</a>
        </div>
        @foreach (var item in Model.Books)
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.BookName</h5>
                    <p class="card-text">Description: @item.BookDescription</p>
                    <p class="card-text">Genre: @item.BookGenre</p>
                    <a href="@item.BookUrl" target="_blank" class="btn btn-primary">View Book Pdf</a>
                    <a href="/Home/UpdateBook?authorId=@Model.AuthorId&bookId=@item.BookIsbn" class="btn btn-primary">Update</a>
                    <a href="/Home/DeleteBook?authorId=@Model.AuthorId&bookId=@item.BookIsbn" class="btn btn-primary">Delete</a>
                </div>
            </div>

        }
    </div>
</div>
