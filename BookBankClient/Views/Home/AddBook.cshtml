@model Book
@{
    ViewData["Title"] = "BookBank";
}
<nav class="navbar  navbar-default theme_nav">
    <div class="container-fluid">
        <div class="navbar-header">
            <img class="logo" src="/images/logo.png" />
            <a class="navbar-brand" href="#">Global Book Bank</a>
        </div>

        <div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/Home/Authors">Home</a></li>
                <li><a href="/Home/AddAuthor">Add Author</a></li>
                <li><a href="/Home/Logout">Logout</a></li>
                <!--<li><a asp-action="Logout" asp-controller="Account">Logout</a></li>-->
            </ul>

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div>
    <div class="container">
        <form asp-action="AddBook" asp-route-id="@ViewData["AuthorId"]">
            <div class="form-group">
                <label asp-for="BookIsbn">Book Isbn</label>
                <input type="text" class="form-control" asp-for="BookIsbn" placeholder="Isbn">
            </div>
            <div class="form-group">
                <label asp-for="BookName">Book Name</label>
                <input type="text" class="form-control" asp-for="BookName" placeholder="Book Name">
            </div>
            <div class="form-group">
                <label asp-for="BookGenre">Genre</label>
                <input type="text" class="form-control" asp-for="BookGenre" placeholder="Book Genre">
            </div>
            <div class="form-group">
                <label asp-for="BookDescription">Description</label>
                <input type="text" class="form-control" asp-for="BookDescription" placeholder="Description">
            </div>
            <div class="form-group">
                <label asp-for="BookUrl">Book Url</label>
                <input type="text" class="form-control" asp-for="BookUrl" placeholder="Description">
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

