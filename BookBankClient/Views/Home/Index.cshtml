@model UserModel
@{
    ViewData["Title"] = "Home Page";
}
<nav class="navbar  navbar-default theme_nav">
    <div class="container-fluid">
        <div class="navbar-header">
            <img class="logo" src ="/images/logo.png" />
            <a class="navbar-brand" href="#">Global Book Bank</a>
        </div>

        <div>
            <!--<ul class="nav navbar-nav navbar-right">
               <li><a href="/">Home</a></li>
                <li><a asp-action="Logout" asp-controller="Account">Logout</a></li>
            </ul>-->

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div>
    <div class="text-center">
        <h1 class="display-4">Global Book Bank</h1>
    </div>
    <div class="container">
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="UserId">Email address</label>
                <input type="email" asp-for="UserId" class="form-control" id="userId" aria-describedby="emailHelp" placeholder="Enter User Id">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label asp-for="UserId" for="Password">Password</label>
                <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        @if (ViewData["Error"]!=null)
        {
        <div class="alert alert-danger" role="alert">@ViewData["Error"]</div>
        }
    </div>

