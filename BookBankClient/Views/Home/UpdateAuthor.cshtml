@model Author
@{
    ViewData["Title"] = "BookBank";
}
<nav class="navbar  navbar-default theme_nav">
    <div class="container-fluid">
        <div class="navbar-header">
            <img class="logo" src="/images/logo.png" />
            <a class="navbar-brand" href="#">Global Book Bank</a>
        </div>

        <div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/Home/Authors">Home</a></li>
                <li><a href="/Home/AddAuthor">Add Author</a></li>
                <li><a href="/Home/Logout">Logout</a></li>
                <!--<li><a asp-action="Logout" asp-controller="Account">Logout</a></li>-->
            </ul>

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div>
    <div class="text-center">
        <h1 class="display-4">Global Book Bank</h1>
    </div>
    <div class="container">
        <form asp-action="UpdateAuthor" asp-route-id="@Model.AuthorId">
            <div class="form-group">
                <label asp-for="AuthorName">Author Name</label>
                <input type="text" class="form-control" asp-for="AuthorName" value="@Model.AuthorName" placeholder="Author Name">
            </div>
            <div class="form-group">
                <label asp-for="AuthorDescription">Author Description</label>
                <input type="text" class="form-control" asp-for="AuthorDescription" value="@Model.AuthorDescription" placeholder="Description">
            </div>
            <div class="form-group">
                <label asp-for="AuthorCountry">Author Country</label>
                <input type="text" class="form-control" asp-for="AuthorCountry" value="@Model.AuthorCountry" placeholder="Country">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
